
<div class='container is-fluid'>
  <div class='header'>
    <div class='container' id='navbar-wrapper'>
      <div class='level'>
        <div class='level-left'>
          <div class='level-item'>
            <div class='button'>
              <%= link_to 'Sign Out', user_path(current_user), method: :delete %>
            </div>
            <div class='button'>
              <%= link_to "Create an Event", new_event_path %>
            </div>
            <div class='button'>
              <%= link_to 'My Events', user_path(current_user) %>
            </div>
            <div class='button'>
              <%= link_to "Find Events", events_path %>
            </div>
          </div> 
        </div>  
        <div class='level-right'>
          <div class='level-item'>
            <div class="field has-addons">
              <p class="control">
                <input class="input" type="text" placeholder="Find an Event..">
              </p>
              <p class="control">
                <button class="button">
                  Search
                </button>
              </p>
            </div>
          </div>
        </div>  
      </div>
    </div>
  </div>  
</div>
