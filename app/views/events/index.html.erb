<%= render 'header' %>
<div class='section'> 
  <div class='container'>
    <div class='title is-2'>
      <h3>All Events</h3>
    </div>
    <div class='columns is-multiline is-variable is-8'>
      <% @events.each do |event| %>
        <div class='column is-one-quarter'>
          <div class='title'>
            <%= link_to event.event_name, event_path(event) %>
            <div class='subtitle'>
              <%= event.description %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>  
</div>