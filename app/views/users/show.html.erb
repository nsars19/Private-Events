<div class='section'>
  <div class='title'>
    <h2>Welcome <%= @user.username %></h2>
  </div>
</div>
<div>
  <div class='links'>
    <div class="columns">
      <div class='column is-one-fifth'>
        <p>
          <%= link_to "Create an Event", new_event_path %>
        </p>
      </div>
      <div class='column is-one-fifth'>
        <p>
          <%= link_to "Find Events", events_path %>
        </p>
      </div>  
    </div>
  </div>
</div>
<div class="created-events">
  <div class='columns is-multiline is-variable is-3'>
    <% @user.created_events.each do |event| %>
      <div class='column is-one-quarter'>
        <div class='title'>
          <%= event.event_name %>
        </div>
        <div class='subtitle'>
          <%= event.description %>
        </div>
        <div class='navigation'>
          <div class='button'>
            <%= link_to 'See this Event', event_path(event) %>
          </div>
        </div>
      </div>
    <% end %>  
  </div>
</div>  