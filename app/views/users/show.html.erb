<div class='section'>
  <div class='container'>
    <div class='title'>
      <h2><%= @user.username %>'s Created Events</h2>
    </div>
    <div>
      <div class='links'>
        <div class="columns">
          <div class='column is-one-fifth'>
            <div class='buttons'>
              <div class='button'>
                <%= link_to "Create an Event", new_event_path %>
              </div>
              <div class='button'>
                <%= link_to "Find Events", events_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
<div class='section'>
  <div class='container'>
    <div class="created-events">
      <div class='columns is-multiline is-variable is-3'>
        <% @user.created_events.each do |event| %>
          <div class='column is-one-quarter'>
            <div class='title'>
              <%= event.event_name %>
            </div>
            <div class='subtitle'>
              <%= event.description %>
            </div>
            <div class='navigation'>
              <div class='button'>
                <%= link_to 'See this Event', event_path(event) %>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
    </div>  
  </div>
</div>    